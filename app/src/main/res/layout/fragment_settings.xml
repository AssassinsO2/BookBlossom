<!-- res/layout/fragment_settings.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:orientation="vertical">

    <!-- Example TextView -->
    <TextView
        android:id="@+id/text_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Settings"
        android:textColor="@color/mainPageText"
        android:fontFamily="@font/poetsen_one_regular"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:padding="16dp" />

    <!-- General Settings -->
    <TextView
        android:id="@+id/text_general"
        android:layout_width="wrap_content"
        android:textColor="@color/mainPageText"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poetsen_one_regular"
        android:layout_marginTop="30dp"
        android:paddingLeft="25dp"
        android:text="General"
        android:textStyle="bold"
        android:textSize="22sp" />

    <CheckBox
        android:id="@+id/checkBoxNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Notifications"
        android:textColor="@color/mainPageText"
        android:fontFamily="@font/poetsen_one_regular"
        android:textSize="19sp"
        android:layout_marginLeft="60sp" />

    <CheckBox
        android:id="@+id/checkBoxBackup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Backup"
        android:fontFamily="@font/poetsen_one_regular"
        android:textSize="19sp"
        android:textColor="@color/mainPageText"
        android:layout_marginLeft="60sp" />

    <TextView
        android:id="@+id/text_theme"
        android:layout_width="wrap_content"
        android:textColor="@color/mainPageText"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poetsen_one_regular"
        android:layout_marginTop="20dp"
        android:paddingLeft="25sp"
        android:text="Theme"
        android:textStyle="bold"
        android:textSize="22sp" />


    <androidx.appcompat.widget.SwitchCompat

        android:id="@+id/switchMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Mode"
        android:textColor="@color/mainPageText"
        android:fontFamily="@font/poetsen_one_regular"
        android:textSize="19sp"
        android:paddingLeft="60sp"
        android:layout_margin="7sp"
        android:background="?attr/selectableItemBackground" />

    <!-- Reading Settings -->
    <TextView
        android:id="@+id/text_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reading"
        android:fontFamily="@font/poetsen_one_regular"
        android:layout_marginTop="20sp"
        android:textColor="@color/mainPageText"
        android:textStyle="bold"
        android:textSize="25sp"
        android:paddingLeft="25sp" />

    <TextView
        android:id="@+id/textSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Size (Auto)"
        android:textColor="@color/mainPageText"
        android:fontFamily="@font/poetsen_one_regular"
        android:textSize="19sp"
        android:paddingLeft="60sp"
        android:layout_margin="8dp" />

</LinearLayout>
